BR2_arm=y
BR2_aarch64=y
BR2_ARCH="arm64"
BR2_ARM_CPU_ARCH="armv8_a"

# BusyBox init
BR2_TARGET_ROOTFS_EXT2=y
BR2_ROOTFS_OVERLAY="" 
BR2_TARGET_ROOTFS_EXT2_SIZE="64M"
BR2_INIT_BUSYBOX=y

# Toolchain
BR2_TOOLCHAIN_BUILDROOT_GLIBC=y

# Packages
BR2_PACKAGE_SDL2=y
BR2_PACKAGE_SDL2_OPENGL_ES2=y
BR2_PACKAGE_LIBSAMPLERATE=y
BR2_PACKAGE_UNZIP=y
BR2_PACKAGE_ZIP=y

# Filesystem
BR2_TARGET_ROOTFS_EXT2=y

# Enable bash shell
BR2_PACKAGE_BASH=y

# Networking (optional)
BR2_PACKAGE_BUSYBOX_CONFIG_EXTRA="CONFIG_FEATURE_FANCY_COMMENTS=y"

# Disable everything else (optional)
BR2_PACKAGE_ENABLE_STATIC_LIBS=n
BR2_TOOLCHAIN_EXTERNAL=n
